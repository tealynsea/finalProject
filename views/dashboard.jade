extends layout

block content
  .wrapper
    .container
            nav.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
                .container    

                    .navbar-header
                        button(type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse")
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(href='/')
                            p WCMN

                    .collapse.navbar-collapse.navbar-exl-collapse
                        ul.nav.navbar-nav.navbar-right
                            li 
                                a(href="/resources") Resources
                            li
                                a(href='mailto:tealynsea@hotmail.com?Subject=Feedback WCMN') Feedback

            div.welcome   
                h1 Welcome, #{user.username}
                h3 Do you want your profile to be available to possible mentors/mentees?
                form.form(action='/savePublic' method='post')
                  .radio
                    label
                      input#availView(type='radio' name='optionsRadio' value='yes' checked=user.public)
                      | Yes 
                  .radio
                    label
                      input#noAvailView(type='radio' name='optionsRadio' value='no' checked=!user.public)
                      | No
                  .form-group
                    input(type='submit')
               

                if user.approved == true
                  h3 Possible Matches
                  for person in allUsers
                    ul.list-unstyled.available
                          li.profile User Name:  #{person.username}
                          li.profile Preferred Language:  #{person.language}
                          li.profile Area:  #{person.area}
                          li.profile Level of experience:  #{person.experience}
                          li.summary 
                            div.summaryContent A little about myself...#{person.summary}
                          li.buttons
                          
                            
                            a.btn.btn-primary.pull-right.contactButton(href='mailto:#{person.email}', role='button') contact
                            a.btn.btn-primary.pull-right.seeProfileButton(href="/" role='button') See Profile
                else 
                  h3 Application pending approval
                             
                          

                //- Give users a link to log out of their account
                p: a(href="/auth/logout") Log out