                      a(href="#") Feedback
                  li
                      a(href='mailto:tealynsea@hotmail.com?Subject=Feedback WCMN') Feedback

                  li.dropdown
                      a.dropdown-toggle(href="/auth/login" data-toggle="dropdown") Sign In
                      .dropdown-menu#dropdownForm
                          form(action="/auth/login", method="post")
                            input(type="text", name="username", placeholder="Username")
                            input(type="password", name="password", placeholder="Password")
                            input(type="submit" class="btn")
      //- This is the carousel
      .carousel.slide#myCarousel
        ol.carousel-indicators
          li.active(data-slide-to='0' data-target="#myCarousel")
          li(data-slide-to='1' data-target="#myCarousel")
          li(data-slide-to='2' data-target="#myCarousel")
          li(data-slide-to='3' data-target="#myCarousel")

        .carousel-inner
          #slide1.item.active
            .carousel-caption
               
          #slide2.item           
            .carousel-caption

          #slide3.item          
            .carousel-caption

          #slide4.item
            .carousel-caption
              p Women 2.0
          
        a.left.carousel-control(data-slide='prev' href='#myCarousel')
          span.icon-prev
        a.right.carousel-control(data-slide='next' href='#myCarousel')
          span.icon-next

    #features.row
      
